{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "backtick"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-multi-spaces": "error",
        "no-trailing-spaces": "error",
        "max-statements-per-line": "error",
        "yoda": [
            "error",
            "never"
        ],
        "operator-assignment": [
            2,
            "always"
        ],
        "no-new": "error",
        "operator-linebreak": [
            "error",
            "after"
        ],
        "no-var":"off"
    },
    "ignorePatterns": [
        "node_modules/**",
        "*.js"
    ]
}